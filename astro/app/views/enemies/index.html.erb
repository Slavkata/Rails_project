<p id="notice"><%= notice %></p>

<h1>Enemies</h1>

<table>
  <thead>
    <tr>
      <th>Name.string</th>
      <th>Power.integer</th>
      <th>Health.integer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enemies.each do |enemy| %>
      <tr>
        <td><%= enemy.name.string %></td>
        <td><%= enemy.power.integer %></td>
        <td><%= enemy.health.integer %></td>
        <td><%= link_to 'Show', enemy %></td>
        <td><%= link_to 'Edit', edit_enemy_path(enemy) %></td>
        <td><%= link_to 'Destroy', enemy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enemy', new_enemy_path %>
